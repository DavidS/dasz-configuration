server {
	listen unix:<%= @base_dir %>/run/nginx.sock;
	server_name ~^(?<subdomain>[^/]*).<%= @domain %>$;
	root <%= @base_dir %>/www/<%= @domain %>/$subdomain;

	index index.html index.htm;

	# include <%= @base_dir %>/etc/nginx/<%= @domain %>/*.conf;

	location / {
		try_files $uri $uri/ =404;
	}
}
