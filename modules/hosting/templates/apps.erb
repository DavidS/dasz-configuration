# This is the application list for <%= @domain %>
#
# records are comma separated values:
# subdomain,path,type,destination[,flags]
#
# subdomain: the domain-prefix to use, may be empty to specify the bare domain
#       for http://blah.<%= @domain %>/, "blah" is the subdomain
# path: URL path to access it (e.g. "/foo" for http://<%= @domain %>/foo)
# type: {static|php5|mono|redirect}
#       static: serve files from <%= @base_dir %>/www/<%= @domain %>/$destination
#       php5: serve files from <%= @base_dir %>/apps/$destination with php5-fpm
#       mono: serve files from <%= @base_dir %>/apps/$destination with mono-fcgi
#       redirect: redirect all requests under http://<%= @domain %>/$path... to $destination...
# destination: directory where the application can be found
# flags: [forcessl]
#       forcessl: redirects all http accesses to https
#
# When nothing is specified for a location, http://<%= @domain %>/ is served
# statically from <%= @base_dir %>/www/<%= @domain %>/_ and 
# http://blah.<%= @domain %>/ is served from <%= @base_dir %>/www/<%= @domain %>/blah.

# more complex setup:
