; For details, please see /etc/php5/fpm/php-fpm.conf

[global]
pid = <%= @base_dir %>/run/php5-fpm-<%= @destination %>.pid
error_log = <%= @base_dir %>/log/php5-fpm-<%= @destination %>.log

daemonize = no

; For details, please see /etc/php5/fpm/pool.d/www.conf

[<%= @local_name %>]

listen = <%= @base_dir %>/run/php5-fpm-<%= @destination %>.sock

user = <%= @admin_user %> 

pm = dynamic
pm.max_children = 5
pm.start_servers = 2
pm.min_spare_servers = 1
pm.max_spare_servers = 3

chdir = /
