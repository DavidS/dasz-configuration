# File Managed by Puppet

server {
  listen <%= @port %>; 
  root  <%= @docroot %>;
  server_name <%= @name %> <%= @serveraliases %>;

  access_log  <%= scope.lookupvar('nginx::log_dir')%>/<%= @name %>.access.log;
  error_log  <%= scope.lookupvar('nginx::log_dir')%>/<%= @name %>.error.log;

  location / {
    autoindex on;
  }
}
